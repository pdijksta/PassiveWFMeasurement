&run_setup
	lattice		= ./Athos_2023-11-18.lat,
	use_beamline	= SATDI01_TO_END,
	rootname	= Athos_Full,
	output		= %s.out,
	centroid	= %s.out,
	sigma		= %s.sig,
	final		= %s.fin,
	parameters	= %s.par,
	magnets		= %s.mag,
	combine_bunch_statistics = 0,
	default_order	= 2,
	concat_order	= 0,
	print_statistics	= 0,
	random_number_seed	= 9876543210,
	p_central = 10763.2,
	tracking_updates	= 1
&end

&run_control
	n_steps	= 1,
&end

! from Sven's OpticsServer (new version), 06.04.2020
! location: SARUN18.START
! This is not the correct location for this simulation but it has no effect on the transport matrix.
&twiss_output
	filename	= %s.twi,
	matched		= 0,
	beta_x = 	4.968
	alpha_x =  -0.563
	beta_y =    16.807
	alpha_y =   1.782
&end

&floor_coordinates
    filename = %s.flo
&end

&alter_elements
	name = "*",
	type = "QUAD",
	item = K1,
	value = 0,
&end

&bunched_beam
	bunch = %s.bun,
	n_particles_per_bunch = 1,
	emit_nx = 200e-9,
	emit_ny = 200e-9,
	use_twiss_command_values = 1,
	Po = 10763.2,
	sigma_dp = 0
	sigma_s = 7.5e-6
	momentum_chirp = 0,
	distribution_type[0] = gaussian, gaussian, gaussian,
	enforce_rms_values[0] = 1, 1, 1
&end

&matrix_output
	SDDS_output = %s.mat,
	SDDS_output_order = 1,
	individual_matrices = 1,
&end

&track
&end

